<style>
#about_button {
  /* align-items: center; */
  padding-top: 20px;
}

.heroSection {
  position: relative;
  overflow: hidden; /* Ensure that no content overflows the container */
  height: 100vh; /* Full viewport height */
  color: white; /* Text color */
}

/* Style for the background image */
#heroSectionBackImage {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensures the image covers the entire container */
  z-index: -1; /* Place the image behind other content */
}

/* Style for the overlay */
.heroOverlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5); /* Semi-transparent overlay */
  z-index: 1; /* Place the overlay above the background image */
}

/* Style for the hero content container */
#heroElement {
  position: relative;
  z-index: 2; /* Ensure the content is above the overlay */
  text-align: center; /* Center align text */
  padding: 2rem; /* Space around the content */
  color: white; /* Text color */
}

/* Styles for the Hero component */
.Hero {
  display: inline-block; /* Ensure the Hero component behaves like a block-level element */
  background: rgba(0, 0, 0, 0.3); /* Optional: Add a semi-transparent background to make text more readable */
  border-radius: 8px; /* Optional: Rounded corners */
  padding: 2rem; /* Space inside the Hero component */
}

/* Styles for the title */
.Hero .title {
  font-size: 2.5rem; /* Adjust size as needed */
  font-weight: bold; /* Make the title bold */
  margin-bottom: 1rem; /* Space below the title */
}

/* Styles for the subtitle */
.Hero .subtitle {
  font-size: 1.25rem; /* Adjust size as needed */
  font-weight: 600; /* Slightly bold */
}

/* Responsive design for the subtitle */
@media (max-width: 640px) {
  .Hero .subtitle span {
    display: block; /* Stack the subtitle text on smaller screens */
    font-size: 1rem; /* Adjust font size for smaller screens */
    color: white !important;
  }
}
</style>
