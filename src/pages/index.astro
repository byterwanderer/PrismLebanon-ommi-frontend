---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
// import Features from '~/components/widgets/Features.astro';
import Prices from '~/components/widgets/Pricing.astro';
// import Steps from '~/components/widgets/Steps.astro';
// import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
// import FAQs from '~/components/widgets/FAQs.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
// import Content from '~/components/widgets/Content.astro';
import Button from '~/components/ui/Button.astro';

// Importing Tabler Icons
import { IconBrandTwitter, IconBrandFacebook, IconBrandInstagram } from '@tabler/icons-react';

const metadata = {
  title: "Ummi's",
  ignoreTitleTemplate: true,
};

const socialLinks = [
  { name: 'Twitter', url: 'https://twitter.com', icon: IconBrandTwitter },
  { name: 'Facebook', url: 'https://facebook.com', icon: IconBrandFacebook },
  { name: 'Instagram', url: 'https://instagram.com', icon: IconBrandInstagram },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <div>

    <Hero
      actions={[
        {
          variant: 'primary',
          text: 'Check Out The Menu',
          href: '/ommiMenu',
          target: '_blank',
          icon: 'tabler:arrow-big-right-lines',
        },
        { text: 'Learn more', href: '#about' },
      ]}
      image={{ src: '~/assets/images/mezze-hero.jpg', alt: 'Ommi Hero Image' }}
    >
      <Fragment slot="title"> Ummi's </Fragment>

      <Fragment slot="subtitle">
        <span class="hidden sm:inline"> <span class="font-semibold">Taste</span> The Tradition With Every Bite</span>
      </Fragment>
    </Hero>
  </div>
  <!-- Note Widget ******************* -->

  <Note />

  <HeroText id="about" callToAction2="">
